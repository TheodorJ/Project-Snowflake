package proj.snowflake.src;

import java.util.ArrayList;

public class PosNegArrayList {
	
	ArrayList<ArrayList> negList = new ArrayList<ArrayList>();
	ArrayList<ArrayList> posList = new ArrayList<ArrayList>();
	
	public PosNegArrayList() {
		
	}
	
	public ArrayList<Chunk> get(int index) throws ArrayIndexOutOfBoundsException {
		if(index < 0) {
			index += 1;
			index *= -1;
			return negList.get(index);
		}
		else {
			return posList.get(index);
		}
	}
	
	public void add(boolean positive, ArrayList<Chunk> arrList) {
		if(positive) {
			posList.add(arrList);
		}
		else {
			negList.add(arrList);
		}
	}
}
